---
import { SITE } from "@config";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Layout from "@layouts/Layout.astro";
---
<Layout title={`Photos | ${SITE.title}`}>
    <Header activeNav="photos"/>
    <Breadcrumbs />
    <main id="main-content">
      <section class="my-6 max-w-3xl w-full h-full">
        <iframe            
            id="pixelfed_embedded"
            scrolling="no"
            class="border-skin-line border-4"
            width="100%"
            height="878px"
            title="FjellOverflow on Pixelfed"
            src="https://pixelfed.social/FjellOverflow/embed"/>
      </section>
    </main>
    <Footer/>
</Layout>